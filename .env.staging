# Staging Environment Configuration
NODE_ENV=staging

# Database - PlanetScale staging branch
DATABASE_URL=mysql://staging_user:password@staging-host/staging_db

# Redis - Upstash staging instance
UPSTASH_REDIS_REST_URL=https://staging-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=staging_token

# Transloadit - Use staging template
TRANSLOADIT_AUTH_KEY=tastyyyy
TRANSLOADIT_AUTH_SECRET=${TRANSLOADIT_AUTH_SECRET}
TRANSLOADIT_TEMPLATE_ID=staging_template_id

# ImageKit - Staging configuration
IMAGEKIT_PUBLIC_KEY=${IMAGEKIT_PUBLIC_KEY}
IMAGEKIT_PRIVATE_KEY=${IMAGEKIT_PRIVATE_KEY}
IMAGEKIT_URL_ENDPOINT=${IMAGEKIT_URL_ENDPOINT}

# Session
SESSION_SECRET=staging_session_secret_change_in_production

# Replit Domain Configuration
REPLIT_DOMAINS=staging.tastyyyy.com,localhost:5000
ISSUER_URL=https://replit.com/oidc
REPL_ID=${REPL_ID}

# Feature Flags
ENABLE_VIDEO_UPLOADS=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_LOGS=true