{
  "name": "tasty-crm-production",
  "version": "1.0.0",
  "description": "Tasty CRM Production Deploy",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "tsc server/index.ts --outDir dist --target es2020 --module commonjs --esModuleInterop --allowSyntheticDefaultImports --resolveJsonModule --skipLibCheck",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "npm run dev:server",
    "dev:server": "NODE_ENV=development tsx server/index.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "mysql2": "^3.6.5",
    "multer": "^1.4.5-lts.1",
    "@logtail/node": "^0.4.19"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/express-session": "^1.17.10",
    "@types/bcrypt": "^5.0.2",
    "@types/multer": "^1.4.11"
  }
}